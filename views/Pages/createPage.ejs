<%- include('../partials/header'); -%>      

        <main class="container-fluid d-flex justify-content-center ">
            
            <div style="height: 2vh;"></div>
            <div class="row d-flex justify-content-center">
                
                <div class="col-md">
                    <div class="container-fluid d-flex justify-content-center mt-3" >
                        <div>
                            <div class="d-flex justify-content-center">
                                <div>
                                    <div class="d-flex justify-content-center mb-3">
                                        <h3 class="display-2"> Post Preview</h3>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <h3 id="titlePreview" class="display-4"> Title </h3>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center mb-3">
                                <div>
                                    <div class="d-flex justify-content-center mb-3">                                    
                                        <img id= "imagePreview" class="rounded border border-dark mb-3 img-fluid" src="data:image/jpeg;base64,">
                                    </div>
                                    <div class="container d-flex justify-content-center mb-3">
                                        
                                        <div>
                                            <div class="d-flex justify-content-center">
                                                <h5 class = "mx-1 display-8" id="namePreview">This is {Pet's name} </h5>  <!-- to be modified -->
                                                <h5 class = "display-8" id="ownerPreview"> and it's owner is {owner's name}.</h5>  <!-- to be modified -->
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <h5 class = "mx-1 display-8" id="animalPreview"> It is a cat </h5>  <!-- to be modified -->
                                                <h5 class = "display-8" id="moodPreview">and now is feeling {mood}.</h5>  <!-- to be modified -->
                                            </div>
                                        </div>    
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <p class="h6 text-wrap text-break blockquote" id="descriptionPreview" style="width: 80vh;" >Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="container-fluid mt-3"> 
                        <div class="d-flex justify-content-center">
                            <h3 class="display-2">Add new post</h3>
                        </div>
                        <div class="d-flex justify-content-center">
                            <form class = "md-form" method="POST" action="/post/" enctype="multipart/form-data">

                                <div class="form-floating mb-3" >
                                    <input id="titleInput" type="text" class="form-control" id="floatingInput" placeholder="title" name="title" required>
                                    <label for="floatingInput" >Title</label>
                                </div>

                                <div class="form-floating mb-3" >
                                    <input id="animalInput" type="text" class="form-control" id="floatingInput" placeholder="animal" name="animal" required>
                                    <label for="floatingInput" >Animal</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input id="nameInput" type="text" class="form-control" id="floatingInput" placeholder="name" name="name" required>
                                    <label for="floatingInput" > Pet's Name </label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input id="ownerInput" type="text" class="form-control" id="floatingInput" placeholder="title" name="owner">
                                    <label for="floatingInput" > Owner's Name </label>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input id="moodInput" type="text" class="form-control" id="floatingInput" placeholder="happy" name="mood">
                                    <label for="floatingInput">Mood</label>
                                </div>

                                <div class="mb-3">
                                    <input id = "imageInput" class="form-control form-control-lg" id="formFileLg" type="file" name="image" required>
                                </div>
                                
                                <div class="form-floating mb-3" >
                                    <textarea id= "descriptionInput"class="form-control" placeholder="Description" id="floatingTextarea" name="description" style="height: 20vh;"></textarea>
                                    <label for="floatingTextarea">Description</label>
                                </div>
                                

                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn bg-primary text-light hoverBtnProp ">Post</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div style="height: 2vh;"></div>
        </main>

        <script type= "text/javascript" src= "../Scripts/imagePreviewSetup.js"> </script>
		<script type= "text/javascript" src= "../Scripts/imageResizeSetup.js"> </script>
        <script type= "text/javascript" src= "../Scripts/formPreviewSetup.js"> </script>
        
        <script>
            
            imagePreviewSetup();
            imageResizeSetup();
            formPreviewSetup();
                        
        </script>

<%- include('../partials/footer'); -%>