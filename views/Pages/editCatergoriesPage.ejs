<%- include('../partials/header'); -%>

		<main class="container-fluid">
            <div style="height: 2vh;"></div>
            <div class="d-flex justify-content-center m-3">
                <h1 class="display-1 text-primary">Edit Catergories</h1>
            </div>
            
            <div class="d-flex justify-content-center">
                <div class="input-group m-3 d-flex justify-content-center" >
                    <form class="md-form d-flex justify-content-center" method="post" action="/categories/">
                        <button type="submit" class="btn bg-primary text-light hoverBtnProp d-inline" style="height: 7vh; width: 10vh;">Add</button>
                        <div class="form-floating mb-3" >
                            <input id="titleInput" type="text" class="form-control d-inline" placeholder="Category" name="category" required style="height: 7vh; width: 20vh;">
                            <label for="floatingInput" >Category</label>
                        </div>
                        <div style="display: none;">
                            <input value="patch" name="method">
                        </div>
                    </form>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <div class="input-group m-3 d-flex justify-content-center" >
                    <form class="md-form d-flex justify-content-center" method="post" action="/categories/">
                        
                        <button type="submit" class="btn bg-primary text-light hoverBtnProp" style="height: 7vh; width: 10vh;">Delete</button>
                      
                        <div class="form-floating mb-3" >
                            <input id="titleInput" type="text" class="form-control" placeholder="Category" name="category" required style="height: 7vh;width: 20vh;">
                            <label for="floatingInput" >Category</label>
                        </div>
                        <div style="display: none;">
                            <input value="delete" name="method">
                        </div>
                    </form>
                </div>
            </div>
            <div style="height: 2vh;"></div>
		</main>

